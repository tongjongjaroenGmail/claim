<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="createLeaveProfileNextYearTask" class="com.bredit.leavemanagement.task.CreateLeaveProfileNextYearTask" />

	<!-- Spring Quartz -->
	<bean name="runAllJob" class="org.springframework.scheduling.quartz.JobDetailBean">

		<property name="jobClass" value="com.bredit.leavemanagement.task.RunAllJob" />

		<property name="jobDataAsMap">
			<map>
				<entry key="createLeaveProfileNextYearTask" value-ref="createLeaveProfileNextYearTask" />
			</map>
		</property>

	</bean>

	<!-- Cron Trigger, run every 5 seconds -->
	<bean id="cronTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="runAllJob" />
		<property name="cronExpression" value="0 5 0 1 1 ?" />
	</bean>

	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="cronTrigger" />
			</list>
		</property>
	</bean>

</beans>